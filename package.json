{
  "name": "@ficsit/code-style",
  "version": "1.1.0",
  "description": "FicsIt's official code style enforcer.",
  "repository": "https://github.com/ficsit/code-style",
  "author": "FicsIt Employees",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "fix-style": "git ls-tree --name-only HEAD | xargs eslint --no-error-on-unmatched-pattern --fix",
    "test-style": "git ls-tree --name-only HEAD | xargs eslint --no-error-on-unmatched-pattern",
    "release": "lerna publish patch --yes"
  },
  "dependencies": {
    "@ficsit/eslint-config-code-style": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1"
  },
  "devDependencies": {
    "@ficsit/code-style": "link:.",
    "eslint": "^6.8.0",
    "lerna": "^3.20.2"
  }
}
